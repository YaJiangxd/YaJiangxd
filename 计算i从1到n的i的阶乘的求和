#include <stdio.h>

int fctr(int n)
{
    if(n == 0 || n == 1)
        return 1;
    else
        return n * fctr(n - 1);
}

int main()
{
    int n,sum;
    printf("请输入一个自然数 >:");
    scanf("%d", &n);
    int i = 1;
    for(i = 1; i <= n; i++)
    {
        sum += fctr(i);
    }
    printf("sum = %d\n", sum);
    return 0;
}
